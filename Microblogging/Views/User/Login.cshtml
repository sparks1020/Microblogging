@model AuthenticationBase.Models.Authentication.AuthenticationForm
<body>
    <div>
<form method="POST">
<div style="color: red;">
    @Model.ErrorMessage
</div>
<div class="form-group">
    <h4><strong>Username</strong></h4>
    <input class="form-control" type="text" name="Username" placeholder="Username" value="@Model.Username" />
</div>
<div class="form-group">
    <h4><strong>Password</strong></h4>
    <input class="form-control" type="password" name="Password" value="@Model.Password" />
</div>
<div>
    <button class="btn btn-primary" type="submit">Log In</button>
</div>
</form>
        </div>
</body>